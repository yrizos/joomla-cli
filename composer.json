{
  "name": "yrizos/joomla-cli",
  "homepage": "https://github.com/yrizos/joomla-cli",
  "description": "Simple CLI tool to manage Joomla installations.",
  "type": "tool",
  "keywords": ["joomla"],
  "license": "MIT",
  "authors": [
    {
      "name": "Yannis Rizos",
      "email": "yrizos@gmail.com",
      "homepage": "https://twitter.com/yrizos"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": ">=5.4.0",
    "symfony/console": "2.6.4"
  },
  "autoload": {
    "psr-4": {
      "JCli\\": "src/"
    }
  },
  "bin": [
    "bin/jcli"
